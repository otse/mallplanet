{
	"compilerOptions": {
		"sourceMap": false,
		"module": "ES6",
		"target": "ESNext",
		"esModuleInterop": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"es2016"
		],
		"outDir": "js",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": false,
		"moduleResolution": "Node",
		"removeComments": false,
		"strictNullChecks": true,
		"baseUrl": "./js",
		"paths": {
			"@/*": ["*"]
		},
	},
	
	"files": [
		"src/mall.d.ts"
	],
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules"
	],
}